---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
import SocialLinks from './SocialLinks.astro';
import { Image } from 'astro:assets';
import logo from '../assets/logo.png'
---

<header>
	<nav>
		<div class="nav-brand">
			<h2><a href="/"><Image src={logo} alt="Logo"/><span class="site-title">{SITE_TITLE}</span></a></h2>
		</div>
		
		<button class="mobile-menu-toggle" aria-label="Toggle mobile menu">
			<span></span>
			<span></span>
			<span></span>
		</button>
		
		<div class="nav-menu" id="nav-menu">
			<div class="internal-links">
				<HeaderLink href="/">Blog</HeaderLink>
				<HeaderLink href="/projects">Projects</HeaderLink>
				<HeaderLink href="/speaking">Speaking</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
				<HeaderLink href="https://shinysoft.biz" target="_blank">ShinySoft</HeaderLink>
				<!--<HeaderLink href="https://www.youtube.com/@GoneDotNet" target="_blank">Gone .NET</HeaderLink>-->
			</div>
			<SocialLinks />
		</div>
	</nav>
</header>

<script>
	document.addEventListener('DOMContentLoaded', function() {
		const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
		const navMenu = document.querySelector('.nav-menu');
		
		if (mobileMenuToggle && navMenu) {
			mobileMenuToggle.addEventListener('click', function() {
				navMenu.classList.toggle('active');
				mobileMenuToggle.classList.toggle('active');
			});
		}
	});
</script>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
		position: relative;
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-height: 60px;
	}
	
	.nav-brand h2 {
		margin: 0;
		font-size: 1em;
	}

	.nav-brand h2 a {
		text-decoration: none;
		display: flex;
		align-items: center;
		gap: 0.5em;
	}
	
	.nav-brand h2 a img {
		width: 32px;
		height: 32px;
	}
	
	.site-title {
		color: rgb(var(--black));
	}
	
	.mobile-menu-toggle {
		display: none; /* Hidden on desktop */
		flex-direction: column;
		justify-content: space-around;
		width: 30px;
		height: 30px;
		background: transparent;
		border: none;
		cursor: pointer;
		padding: 0;
		z-index: 1000;
	}
	
	.mobile-menu-toggle span {
		width: 25px;
		height: 3px;
		background-color: rgb(var(--black));
		transition: all 0.3s ease;
		transform-origin: center;
	}
	
	.mobile-menu-toggle.active span:nth-child(1) {
		transform: rotate(45deg) translate(5px, 5px);
	}
	
	.mobile-menu-toggle.active span:nth-child(2) {
		opacity: 0;
	}
	
	.mobile-menu-toggle.active span:nth-child(3) {
		transform: rotate(-45deg) translate(7px, -6px);
	}
	
	.nav-menu {
		display: flex;
		align-items: center;
		gap: 2em;
	}
	
	.internal-links {
		display: flex;
		gap: 1em;
	}
	
	.nav-menu a {
		padding: 1em 0.5em;
		color: rgb(var(--black));
		border-bottom: 4px solid transparent;
		text-decoration: none;
		transition: border-bottom-color 0.3s ease;
	}
	
	.nav-menu a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	
	.social-links,
	.social-links a {
		display: flex;
	}
	
	/* Mobile Styles */
	@media (max-width: 768px) {
		header {
			padding: 0 0.5em;
		}
		
		nav {
			flex-wrap: wrap;
			position: relative;
		}
		
		.nav-brand h2 {
			font-size: 0.9em;
		}
		
		.nav-brand h2 a img {
			width: 28px;
			height: 28px;
		}
		
		.mobile-menu-toggle {
			display: flex;
		}
		
		.nav-menu {
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: white;
			flex-direction: column;
			padding: 1em;
			box-shadow: 0 4px 8px rgba(var(--black), 10%);
			transform: translateY(-100%);
			opacity: 0;
			visibility: hidden;
			transition: all 0.3s ease;
			z-index: 999;
		}
		
		.nav-menu.active {
			transform: translateY(0);
			opacity: 1;
			visibility: visible;
		}
		
		.internal-links {
			flex-direction: column;
			gap: 0;
			width: 100%;
			margin-bottom: 1em;
		}
		
		.nav-menu a {
			padding: 0.75em 0;
			border-bottom: 1px solid rgba(var(--gray-light), 50%);
			border-left: none;
			width: 100%;
			text-align: left;
		}
		
		.nav-menu a.active {
			border-bottom-color: rgba(var(--gray-light), 50%);
			border-left: 4px solid var(--accent);
			padding-left: 0.5em;
		}
		
		.social-links {
			justify-content: center;
			width: 100%;
		}
	}
	
	/* Smaller mobile devices */
	@media (max-width: 480px) {
		header {
			padding: 0 0.25em;
		}
		
		.nav-brand h2 {
			font-size: 0.8em;
		}
		
		.nav-brand h2 a img {
			width: 24px;
			height: 24px;
		}
		
		.site-title {
			font-size: 0.9em;
		}
		
		.mobile-menu-toggle {
			width: 28px;
			height: 28px;
		}
		
		.mobile-menu-toggle span {
			width: 22px;
		}
	}
</style>
